<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty" width="100%">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "price" %></th>
    <th><%= sortable "released_at", "Released" %></th>
	<th><%= "Actions" %></th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%= product.name %></td>
      <td class="price"><%= number_to_currency(product.price) %></td>
      <td><%= product.released_at.strftime("%B %e, %Y") %></td>
      <td> <%= link_to image_tag("edit.png", :width => "16px", :height => "16px", :title => "Edit"), edit_product_path(product) %>
		   <%= link_to image_tag("delete.png", :width => "16px", :height => "16px", :title => "Delete"), product, :confirm => 'Are you sure?', :method => :delete %>
		</td>
    </tr>
  <% end %>
</table>
<%= will_paginate @products %>
